<!-- Fichier : app/src/main/res/color/bottom_nav_item_color_state.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
        État lorsque l'item est sélectionné (checked).
        On utilise la couleur rose vive pour un maximum de visibilité.
    -->
    <item android:color="@color/mytt_pink" android:state_checked="true" />

    <!--
        État par défaut (non sélectionné).
        On utilise une couleur grise neutre.
    -->
    <item android:color="@color/grey" android:state_checked="false" />
</selector>